{
    "name": "polaris-nx",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "libs/polaris-nx/src",
    "projectType": "library",
    "targets": {
        "build": {
            "executor": "@nx/js:tsc",
            "outputs": [
                "{options.outputPath}"
            ],
            "options": {
                "outputPath": "dist/libs/polaris-nx",
                "main": "libs/polaris-nx/src/index.ts",
                "tsConfig": "libs/polaris-nx/tsconfig.lib.json",
                "packageJson": "libs/polaris-nx/package.json",
                "assets": [
                    "libs/polaris-nx/*.md",
                    {
                        "input": "./libs/polaris-nx/src",
                        "glob": "**/!(*.ts)",
                        "output": "./src"
                    },
                    {
                        "input": "./libs/polaris-nx/src",
                        "glob": "**/*.d.ts",
                        "output": "./src"
                    },
                    {
                        "input": "./libs/polaris-nx",
                        "glob": "generators.json",
                        "output": "."
                    },
                    {
                        "input": "./libs/polaris-nx",
                        "glob": "executors.json",
                        "output": "."
                    },
                    {
                        "input": "./libs/polaris-nx",
                        "glob": "migrations.json",
                        "output": "."
                    }
                ],
                "updateBuildableProjectDepsInPackageJson": true
            }
        },
        "lint": {
            "executor": "@nx/linter:eslint",
            "outputs": [
                "{options.outputFile}"
            ],
            "options": {
                "lintFilePatterns": [
                    "libs/polaris-nx/**/*.ts",
                    "libs/polaris-nx/generators.json",
                    "libs/polaris-nx/executors.json",
                    "libs/polaris-nx/package.json",
                    "libs/polaris-nx/migrations.json"
                ]
            }
        },
        "test": {
            "executor": "@nx/jest:jest",
            "outputs": [
                "{workspaceRoot}/coverage/{projectRoot}"
            ],
            "options": {
                "jestConfig": "libs/polaris-nx/jest.config.ts",
                "passWithNoTests": true
            },
            "configurations": {
                "ci": {
                    "ci": true,
                    "codeCoverage": true
                }
            }
        }
    },
    "tags": [
        "scope:cli"
    ]
}
